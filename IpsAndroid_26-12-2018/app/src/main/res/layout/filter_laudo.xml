<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fundo_fragment"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fundo_edittext"
        android:orientation="vertical">

        <TextView
            android:id="@+id/FilterLaudoTvTitLaudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:text="Pesquisa por :"
            android:textColor="@color/entradaTexto" />

        <Spinner
            android:id="@+id/FilterLaudoSpiLaudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:gravity="left"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/FilterLaudoLlLinha01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/entradaTexto"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/FilterLaudoTvTitSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparent"
            android:text="Digite "
            android:textColor="@color/entradaTexto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/FilterLaudoAcSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:inputType="textCapCharacters"
                android:background="@color/transparent"
                android:textColor="@color/entradaTexto"
                android:textCursorDrawable="@drawable/cursor_default" />

            <ImageView
                android:id="@+id/FilterLaudoIvClear"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="-20dp"
                android:background="@color/transparent"
                android:src="@drawable/ico_cancel"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FilterLaudoLlLinha02"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/entradaTexto"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/fundo_inferior"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/FilterLaudoLlCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical">

                    <ImageView
                        android:id="@+id/PostNewSivCancelar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ico_cancel" />

                    <TextView
                        android:id="@+id/FilterLaudoTvCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/transparent"
                        android:text="CANCELAR"
                        android:textColor="@color/branco"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/FilterLaudoLlFiltrar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FilterLaudoSivFiltrar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ico_confirm" />

                    <TextView
                        android:id="@+id/FilterLaudoTvFiltrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="FILTRAR"
                        android:textColor="@color/branco"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>