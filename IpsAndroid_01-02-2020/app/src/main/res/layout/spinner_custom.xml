<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="3px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SpinnerCustomTvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@color/branco"
            android:layout_toEndOf="@+id/SpinnerImageCustomIvImagem"
            android:layout_toRightOf="@+id/SpinnerImageCustomIvImagem"
            android:gravity="center_vertical"
            android:padding="3px"
            android:text="TEXTO DA IMAGEM"
            android:textColor="@color/entradaTexto"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>