<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/branco"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <nadlertec.com.br.ips.setting.switchicon.SwitchIconView
            android:id="@+id/FragSyncSivSync"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            app:si_disabled_color="@color/item_selecionado_menu"
            app:si_enabled="true"
            app:si_no_dash="false"
            app:si_tint_color="@color/entradaTexto"
            app:srcCompat="@drawable/img_sync" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/FragSyncTvMensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/mensagemBEMVINDO"
            android:textColor="@color/dialogError"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/FragSyncPbProgress"
            style="@style/ProgressBarRatingIndicator.red"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical" />

        <ProgressBar
            android:id="@+id/FragSyncPbLaudo"
            style="@style/ProgressBarRatingIndicator.blue"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/FragSyncTvResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="left"
                android:singleLine="false"
                android:textSize="17sp"
                android:text=""
                android:textColor="@color/entradaTexto"
                android:maxLines="500"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
