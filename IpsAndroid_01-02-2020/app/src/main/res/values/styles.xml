<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/entradaTexto</item>
        <item name="colorPrimaryDark">@color/entradaTexto</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="nLiveoDrawer" parent="Theme.nLiveo">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/entradaTexto</item>
        <item name="colorPrimaryDark">#868585</item>
        <item name="colorAccent">#13a89e</item>
    </style>

    <style name="Theme.Transparent" parent="@style/FullScreenEntradaTexto">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/vermelhoerro</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="FullScreenEntradaTexto" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/dialogInfo</item>
        <item name="colorPrimary">@color/entradaTexto</item>
        <item name="colorPrimaryDark">@color/entradaTexto</item>
        <item name="colorControlNormal">@color/entradaTexto</item>
    </style>

    <style name="FullScreenLogin" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/entradaTexto</item>
        <item name="colorPrimary">@color/entradaTexto</item>
        <item name="colorPrimaryDark">@color/entradaTexto</item>
        <item name="colorControlNormal">@color/entradaTexto</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/entradaTexto</item>
        <item name="colorPrimary">@color/entradaTexto</item>
        <item name="colorPrimaryDark">@color/dialogSuccess</item>
        <item name="colorControlNormal">@color/entradaTexto</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/branco</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/dialogError</item>
    </style>

    <style name="TextAppearance.Design.ErrorEdit" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/vermelhoerro</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Design.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/corBotao</item>
    </style>

    <style name="TextAppearance.Design.HintEdit" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF4081</item>
    </style>

    <!-- PROGRESSBAR -->
    <style name="ProgressBarRatingIndicator" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">70.0dip</item>
        <item name="android:layout_height">10.0dip</item>
        <item name="android:layout_marginLeft">@dimen/progressbar_rating_margin</item>
        <item name="android:layout_marginRight">@dimen/progressbar_rating_margin</item>
    </style>

    <style name="ProgressBarRatingIndicatorCorBase" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:layout_marginLeft">@dimen/progressbar_rating_margin</item>
        <item name="android:layout_marginRight">@dimen/progressbar_rating_margin</item>
    </style>

    <style name="ProgressBarRatingIndicator.red" parent="@style/ProgressBarRatingIndicator">
        <item name="android:progressDrawable">@drawable/progressbar_indicator_red</item>
    </style>

    <style name="ProgressBarRatingIndicator.blue" parent="@style/ProgressBarRatingIndicator">
        <item name="android:progressDrawable">@drawable/progressbar_indicator_blue</item>
    </style>

</resources>
